<Window x:Class="TPhotoCompetitionViewer.Views.ImageNumberPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPhotoCompetitionViewer.Views"
        mc:Ignorable="d"
        Title="Enter Image Number" 
        Height="210" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" 
        WindowStartupLocation="CenterOwner"
        FocusManager.FocusedElement="{Binding ElementName=ImageNumber}">
    <Grid>
        <TextBox Name="ImageNumber" FontSize="72" Margin="0,0,-0.333,77"/>
        <Button x:Name="OkButton" Content="OK" HorizontalAlignment="Left" Margin="108,119,0,0" VerticalAlignment="Top" Width="75" FontSize="36" Click="Ok_Click"/>
    </Grid>
</Window>
